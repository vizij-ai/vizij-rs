{
  "name": "@vizij/orchestrator-wasm",
  "version": "0.1.0",
  "description": "WASM bindings for Vizij orchestrator core (JS wrapper)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vizij-ai/vizij-rs"
  },
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/",
    "pkg/",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "pnpm run build && node dist/tests/all.test.js",
    "prepublishOnly": "node -e \"const fs=require('fs');if(!fs.existsSync('pkg')){console.error('Missing pkg/. Run wasm-pack build.');process.exit(1);}\""
  },
  "dependencies": {
    "@vizij/value-json": "workspace:*",
    "@vizij/wasm-loader": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "@types/node": "^20.12.7"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
